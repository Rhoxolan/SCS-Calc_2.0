<Page x:Class="SCS_Calc_2._0.InformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:SCS_Calc_2._0"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="600">

    <Page.Resources>
        <ResourceDictionary Source="InformationPageDictionary.xaml"/>
    </Page.Resources>

    <ScrollViewer>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition MinHeight="50" MaxHeight="50"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid x:Name="gridTextBoxInformation" MinHeight="350" MinWidth="350" Grid.Row="0" Margin="5">
                <TextBox x:Name="textBoxInformation" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                         Width="{Binding ActualWidth, ElementName=gridTextBoxInformation, Mode=OneWay}"
                         Height="{Binding ActualHeight, ElementName=gridTextBoxInformation, Mode=OneWay}"/>
            </Grid>

            <Label Margin="0,-8,7,0" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" MouseDoubleClick="LabelAuthor_MouseDoubleClick"
               Content="Павел Бацемакин, 2022 г." FontSize="17" ToolTip="Кликните два раза, чтобы перейти на профиль разработчика в GitHub"/>

        </Grid>

    </ScrollViewer>

</Page>
