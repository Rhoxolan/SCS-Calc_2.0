<Window x:Class="SCS_Calc_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCS_Calc_2._0"
        mc:Ignorable="d"
        Title="SCS-Calc 2.0" Height="700" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3.2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="Gainsboro">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#CFCFD6"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Расчёт конфигурации"/>
            <Button>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Дополнительные параметры расчёта конфигурации"/>
            </Button>
            <Button Content="История" />
            <Button Content="Информация" />
        </StackPanel>
        <Frame Grid.Column="1" Background="#FBFBFB" NavigationUIVisibility = "Hidden"/>
    </Grid>
</Window>
